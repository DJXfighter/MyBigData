<configuration>
	<!-- 单机模式配置 -->
	<property>
		<!-- 指定 HBase 存放数据的目录 -->
		<name>hbase.rootdir</name>
		<value>/root/hbasedir/hbase</value>
	</property>
	<property>
		<!-- 指定 ZooKeeper 集群存放数据的目录 -->
		<name>hbase.zookeeper.property.dataDir</name>
		<value>/root/hbasedir/hbase/zkdir</value>
	</property>

	<!-- 集群模式配置 -->
	<property>
		<!-- 指定 ZooKeeper 集群存放数据的目录 -->
		<name>hbase.zookeeper.quorum</name>
		<value>hadoop-node1,hadoop-node2,hadoop-node3</value>
	</property>
</configuration>
